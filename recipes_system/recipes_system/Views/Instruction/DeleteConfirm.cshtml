@model recipes_system.Models.InstructionDto

@{
    ViewBag.Title = "Delete";
}


<a class="btn btn-primary float-end" href="/instruction/List">Cancel</a>
<h2>Are you sure you want to delete this instruction - @Model.InstructionName ?</h2>


<form action="/instruction/Delete/@Model.InstructionId" method="POST">
    <input type="submit" class="btn btn-danger" value="Confirm Delete" />
</form>